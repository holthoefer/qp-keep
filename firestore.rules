
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check if the user is an admin
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Rules for user profiles
    match /users/{userId} {
      allow read, create: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId || isAdmin();
      
      // Admins can read/write any user profile
      allow list, delete, write: if isAdmin();
    }
    
    // Rules for notes
    match /notes/{noteId} {
      // Any authenticated user with an 'active' profile can create notes.
      allow create: if request.auth.uid != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.status == 'active';
      
      // Users can read/update/delete their own notes.
      allow read, update, delete: if request.auth.uid == resource.data.userId;
      
      // Admins can read/delete any note.
      allow read, delete: if isAdmin();
    }

    // Public collections (read-only for all authenticated users)
    match /controlplan/{planId} {
       allow read: if request.auth != null;
       allow write: if isAdmin();
    }

    match /lenkungsplan/{planId} {
       allow read, write: if request.auth != null;
    }
    
    match /workstations/{wsId} {
       allow read: if request.auth != null;
       allow write: if request.auth != null;
    }
    
    match /auftraege/{auftragId} {
       allow read: if request.auth != null;
       allow write: if isAdmin();
    }
    
     match /dna/{dnaId} {
       allow read, write: if request.auth != null;
    }
    
    match /samples/{sampleId} {
        allow read, write: if request.auth != null;
        allow delete: if isAdmin();
    }

    match /incidents/{incidentId} {
        allow read, write: if request.auth != null;
        allow delete: if isAdmin();
    }
    
    match /events/{eventId} {
       allow read, write: if request.auth != null;
       allow delete: if isAdmin();
    }
    
    // Advanced Control Plans
    match /control-plans/{planId} {
        allow read: if request.auth != null;
        // Only admins can write/delete
        allow write, delete: if isAdmin();
    }
  }
}
