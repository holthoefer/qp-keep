
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow users to read/write their own profile, admins can edit all
    match /users/{userId} {
      allow read: if request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      allow write: if request.auth.uid == userId;
      allow update: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Allow users to manage their own notes, admins can manage all notes
    match /notes/{noteId} {
      allow read: if request.auth != null;
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' || request.auth.uid == resource.data.userId;
    }

    // Simple control plan items (Tasks) - THIS ONE WORKS
    match /controlplan/{itemId} {
        allow read: if request.auth != null;
        allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Advanced control plans - THIS IS THE ONE FAILING
    // TEMPORARY FIX: Allow any authenticated user to write to unblock development.
    match /control-plans/{planId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}
