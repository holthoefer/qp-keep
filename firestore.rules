rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check for admin role
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Helper function to check if the user is the owner of a document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Users can be read by any authenticated user, but only updated by admins.
    // New users are created via a backend function (saveOrUpdateUserProfile).
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if isAdmin(); // Only admins can change roles/status
    }
    
    // Notes can be created by any authenticated user.
    // Users can only read/write their own notes, while admins can read all notes.
    match /notes/{noteId} {
      allow read: if isAdmin() || isOwner(resource.data.userId);
      allow create: if request.auth != null;
      allow update, delete: if isOwner(resource.data.userId);
    }
    
    // Workstations, Auftraege, Control Plans (and their subcollections), DNA, and Samples
    // can be read by any authenticated user, but only written/updated by admins.
    match /workstations/{workstationId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    match /auftraege/{auftragId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    match /control-plans/{planId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    match /lenkungsplan/{planId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    match /dna/{dnaId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null; // Allow updates from Erfassung page
    }
    
    match /samples/{sampleId} {
      allow read: if request.auth != null;
      allow create, update: if request.auth != null;
      allow delete: if isAdmin();
    }
    
    match /incidents/{incidentId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null;
        allow update: if isAdmin() || isOwner(resource.data.reportedBy.uid);
        allow delete: if isAdmin();
    }
    
    match /events/{eventId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if isAdmin() || isOwner(resource.data.userId);
      allow delete: if isAdmin();
    }
  }
}
