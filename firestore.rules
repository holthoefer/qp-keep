
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin role
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Helper function to check if user is active
    function isActive() {
        return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.status == 'active';
    }

    // Users can manage their own profile. Admins can manage any profile.
    match /users/{userId} {
      allow read; // Allow reading of user profiles (e.g., for email display)
      allow create: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId || isAdmin();
    }
    
    // Notes: Users can manage their own notes. Admins can read all.
    match /notes/{noteId} {
      allow read: if resource.data.userId == request.auth.uid || isAdmin();
      allow create: if request.resource.data.userId == request.auth.uid && isActive();
      allow delete: if resource.data.userId == request.auth.uid || isAdmin();
    }

    // Samples: Any authenticated user can read all samples for charting.
    // Users can create/update their own samples. Admins can delete any.
    match /samples/{sampleId} {
      allow read: if request.auth != null;
      allow create: if request.resource.data.userId == request.auth.uid && isActive();
      allow update: if request.auth.uid == resource.data.userId || isAdmin();
      allow delete: if isAdmin();
    }

    // Workstations, Auftraege, Control Plans, DNA, Lenkungsplan:
    // For now, allow general authenticated read/write access.
    // These can be locked down further if needed.
    match /workstations/{wsId} {
      allow read, write: if request.auth != null;
    }
    
    match /auftraege/{auftragId} {
      allow read, write: if request.auth != null;
    }

    match /control-plans/{planId} {
       allow read, write: if request.auth != null;
    }

    match /lenkungsplan/{planId} {
       allow read, write: if request.auth != null;
    }

    match /dna/{dnaId} {
      allow read, write: if request.auth != null;
    }
  }
}
