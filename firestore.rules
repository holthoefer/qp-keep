rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is an admin
    function isAdmin(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role == 'admin';
    }

    // Users can read their own profile and admins can read any profile
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin(request.auth.uid));
      allow write: if request.auth != null && request.auth.uid == userId;
      allow list: if request.auth != null && isAdmin(request.auth.uid);
    }
    
    // Notes can be created by any authenticated user.
    // Users can read/delete their own notes.
    // Admins can read/delete any note.
    match /notes/{noteId} {
      allow create: if request.auth != null;
      allow read, delete: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin(request.auth.uid));
      allow list: if request.auth != null; // Admin list is filtered in the backend query
    }

    // Control Plans can be read by any authenticated user.
    // They can only be created, updated, or deleted by admins.
    match /control-plans/{planId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null && isAdmin(request.auth.uid);
    }

    // Simple controlplan collection (legacy)
    match /controlplan/{planId} {
       allow read: if request.auth != null;
       allow write: if request.auth != null && isAdmin(request.auth.uid);
    }

    // Simple lenkungsplan collection (legacy)
    match /lenkungsplan/{planId} {
       allow read: if request.auth != null;
       allow write: if request.auth != null && isAdmin(request.auth.uid);
    }
  }
}