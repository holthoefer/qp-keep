
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow create, read, update: if request.auth.uid == userId;
      allow list, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    match /notes/{noteId} {
      allow read: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' || request.auth.uid == resource.data.userId;
      allow update, delete: if request.auth.uid == resource.data.userId;
      allow create: if request.auth.uid == request.resource.data.userId 
                      && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.status == 'active';
    }
    match /controlplan/{itemId} {
      // Admins can perform any action.
      allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      
      // Regular users can only read the control plan items.
      allow list, get: if request.auth.uid != null;
    }
  }
}
