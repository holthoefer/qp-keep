
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow logged-in users to read/write their own notes
    match /notes/{noteId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // Allow admin users to read all notes
    match /notes/{noteId} {
        allow read: if request.auth != null && request.auth.token.admin == true;
    }

    // Users can read their own profile
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      // Admins can read/write any user profile
      allow read, write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // TEMPORARY RULE: Allow any authenticated user to write to control-plans to bypass seeding issue.
    // This allows us to create the initial documents. We can tighten this later.
    match /control-plans/{planId} {
       allow read, write: if request.auth != null;
    }

    // Control Plan Items (Simple)
    match /controlplan/{itemId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
  }
}
