
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read/update their own profile.
    // Any authenticated user can create a profile document.
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
      allow create: if request.auth.uid != null;
    }

    // Allow admins to read all user profiles. This is necessary for the admin panel.
    match /users/{userId} {
        allow read: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Users can manage their own notes.
    match /notes/{noteId} {
      allow read, write: if request.auth.uid == request.resource.data.userId;
      allow create: if request.auth.uid != null;
    }
  }
}
