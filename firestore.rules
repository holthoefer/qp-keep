rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users collection:
    // Allow users to read their own profile.
    // Allow only admins to write to any user profile.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Notes collection:
    // Allow users to read/write their own notes.
    // Admins can read/write any note.
    match /notes/{noteId} {
       allow read, write: if request.auth != null;
    }

    // ControlPlan (Simple Tasks) collection:
    // Allow authenticated users to read/write. Admin logic is in the client.
    match /controlplan/{document=**} {
      allow read, write: if request.auth != null;
    }

    // Control Plans (Advanced) collection:
    // Aligning rules with the working /controlplan rules to fix permission errors.
    // Admin logic is handled client-side.
    match /control-plans/{document=**} {
       allow read, write: if request.auth != null;
    }
  }
}
