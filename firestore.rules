rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users Collection
    // - Authenticated users can create their own profile.
    // - Users can only read/write their own profile.
    // - Admins can read/write any profile.
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      allow create: if request.auth.uid == userId;
    }

    // Notes Collection
    // - Authenticated users can create notes.
    // - Admins can read all notes.
    // - Users can only read/delete their own notes.
    match /notes/{noteId} {
        allow create: if request.auth != null;
        allow read: if request.auth != null && (resource.data.userId == request.auth.uid || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
        allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Control Plan (Legacy)
    // - Authenticated users can read all plans.
    // - Admins can write/delete plans.
    match /controlplan/{planId} {
        allow read: if request.auth != null;
        allow write, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Lenkungsplan (Legacy)
    // - Authenticated users can read all plans.
    // - Admins can write/delete plans.
    match /lenkungsplan/{planId} {
        allow read: if request.auth != null;
        allow write, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Control Plans (Advanced)
    // - Authenticated users can read all plans.
    // - Authenticated users can write/create plans.
    // - Admins can delete plans.
    match /control-plans/{planId} {
        allow read, write, create: if request.auth != null;
        allow delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
