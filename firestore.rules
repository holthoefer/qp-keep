
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // User can create their own profile, and read/update it.
      allow create, read, update: if request.auth.uid == userId;
      // Admins can list and write to any user profile.
      allow list, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /notes/{noteId} {
      // Admins can read any note. Users can only read their own notes.
      allow read: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' || request.auth.uid == resource.data.userId;
      // Users can only update/delete their own notes.
      allow update, delete: if request.auth.uid == resource.data.userId;
      // User can only create a note if their account is active.
      allow create: if request.auth.uid == request.resource.data.userId
                    && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.status == 'active';
    }

    match /controlplan/{itemId} {
      // Admins can perform any action.
      allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      // Regular users can only read (list, get) the control plan.
      allow list, get: if request.auth != null;
    }

    match /control-plans/{planId} {
        // Any authenticated user can read plans
        allow read: if request.auth != null;
        // Only admins can write to plans
        allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
