rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if a user is an admin
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Helper function to check if a user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // Users collection:
    // - Users can read their own profile.
    // - Admins can read and write any user profile.
    match /users/{userId} {
      allow get: if request.auth.uid == userId || isAdmin();
      allow list: if isAdmin();
      allow update: if isAdmin();
      // allow create: is handled by backend logic (getProfile)
    }

    // Notes collection:
    // - Users can create notes for themselves.
    // - Users can read and delete their own notes.
    // - Admins can read all notes but cannot delete notes of other users.
    match /notes/{noteId} {
      allow create: if request.resource.data.userId == request.auth.uid;
      allow read: if request.auth.uid == resource.data.userId || isAdmin();
      allow delete: if request.auth.uid == resource.data.userId;
    }

    // Workstations collection:
    // - All authenticated users can read workstations.
    // - Only admins can create and update workstations.
    match /workstations/{workstationId} {
      allow read: if isAuthenticated();
      allow create, update: if isAdmin();
    }
  }
}
