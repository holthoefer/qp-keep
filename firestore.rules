rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isUserAuthenticated() {
      return request.auth != null;
    }

    function isUserProfile(userId) {
      return isUserAuthenticated() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isUserAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Collection: notes
    match /notes/{noteId} {
      allow read: if isUserAuthenticated();
      allow write: if isAdmin();
    }

    // Collection: users
    match /users/{userId} {
      allow read: if isUserAuthenticated();
      allow update: if isAdmin();
      allow create: if isUserAuthenticated();
    }

    // Collection: controlplan (simple tasks)
    match /controlplan/{itemId} {
      allow read: if isUserAuthenticated();
      allow write: if isAdmin();
    }
    
    // Collection: control-plans (advanced)
    match /control-plans/{planId} {
       allow read: if isUserAuthenticated();
       // TEMPORARY RULE TO FIX PERMISSION ISSUE: Allow any logged-in user to write.
       allow write: if request.auth != null;
    }
    
    match /control-plans/{planId}/{collection}/{docId} {
       allow read: if isUserAuthenticated();
       // TEMPORARY RULE TO FIX PERMISSION ISSUE: Allow any logged-in user to write.
       allow write: if request.auth != null;
    }
  }
}
