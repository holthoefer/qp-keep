rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is an admin
    function isAdmin() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Helper function to check if user has an active account
    function isActive() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.status == 'active';
    }

    // Helper function to check if user has at least note-taking permissions
    function canWriteNotes() {
        return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.status in ['active', 'note'];
    }

    // Users collection can be read by any authenticated user to get their own profile
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow list: if isAdmin(); // Only admins can list all users
      allow create: if request.auth != null; // Allow any authenticated user to create their own profile document
    }

    // Notes can be read by their owner or any admin. They can be created by active users and deleted by their owner.
    match /notes/{noteId} {
      allow read: if request.auth.uid == resource.data.userId || isAdmin();
      allow create: if canWriteNotes();
      allow delete: if request.auth.uid == resource.data.userId;
      allow update: if request.auth.uid == resource.data.userId;
    }
    
    // Control Plans (Old simple version) can be read by any authenticated user, but only modified by admins
    match /controlplan/{planId} {
        allow read: if request.auth != null;
        allow write: if isAdmin();
    }
    
    // Lenkungsplan can be read by any authenticated user, but only modified by admins
    match /lenkungsplan/{planId} {
        allow read: if request.auth != null;
        allow write: if isAdmin();
    }
    
    // Control Plans (New complex version) can be read by any authenticated user, but only modified by admins
    match /control-plans/{planId} {
        allow read: if request.auth != null;
        allow write: if isAdmin();
    }
    
    // Workstations can be read by any authenticated user.
    // Admins can create/delete them.
    // Any authenticated user can update operational data, but not core fields.
    match /workstations/{workstationId} {
      allow read: if request.auth != null;
      allow create, delete: if isAdmin();
      allow update: if request.auth != null && (
          isAdmin() || (
            request.resource.data.diff(resource.data).affectedKeys()
              .hasOnly(['POcurrent', 'CPcurrent', 'OPcurrent', 'Bemerkung', 'LOTcurrent'])
          )
        );
    }

    // Auftraege can be read by any authenticated user, but only modified by admins.
    match /auftraege/{auftragId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    // DNA data can be read by any authenticated user, but only modified by admins or system processes (for now, any auth'd user)
    match /dna/{dnaId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null; // Allow logged-in users to update/create DNA
    }
    
    // Sample data can be read by any authenticated user, created by active users, and updated/deleted by their creator or an admin.
    match /samples/{sampleId} {
        allow read: if request.auth != null;
        allow create: if isActive();
        allow update: if request.auth.uid == resource.data.userId || isAdmin();
        allow delete: if isAdmin();
    }

    // Incidents can be read by any authenticated user, created by active users, and modified by creator/admin. Deleted only by admin.
    match /incidents/{incidentId} {
        allow read: if request.auth != null;
        allow create: if isActive();
        allow update: if request.auth.uid == resource.data.reportedBy.uid || isAdmin();
        allow delete: if isAdmin();
    }

    // Events can be read/created by any authenticated user, updated by creator/admin, deleted only by admin.
    match /events/{eventId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null;
        allow update: if request.auth.uid == resource.data.userId || isAdmin();
        allow delete: if isAdmin();
    }
  }
}
