rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // A user can read/write their own profile.
    // An admin can read any user's profile.
    match /users/{userId} {
      allow create: if request.auth.uid != null;
      allow read, update, delete: if request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // A user can CRUD their own notes.
    // An admin can read any user's notes.
    match /notes/{noteId} {
      allow create: if request.auth.uid != null;
      allow read: if request.auth.uid == resource.data.userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      allow update, delete: if request.auth.uid == resource.data.userId;
    }
  }
}
